<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ExpenseActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List of Expenses" />

    <Button
        android:id="@+id/Button01"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button1"
        android:layout_marginTop="16dp"
        android:onClick="goMWith"
        android:text="M Withdrawal" />

    <Button
        android:id="@+id/Button02"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/Button01"
        android:layout_marginTop="16dp"
        android:onClick="goSWith"
        android:text="S Withdrawal" />

    <Button
        android:id="@+id/button1"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="16dp"
        android:onClick="goAWith"
        android:text="A Withdrawal" />

    <Button
        android:id="@+id/Button03"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_above="@+id/Button01"
        android:layout_alignParentRight="true"
        android:onClick="goADep"
        android:text="A Deposit" />

    <Button
        android:id="@+id/Button04"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_above="@+id/Button02"
        android:layout_alignParentRight="true"
        android:onClick="goGeneral"
        android:text="General Expenses" />

</RelativeLayout>