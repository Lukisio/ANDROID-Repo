<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_screen"
    tools:context=".OknoGlowne" >

    <Button
        android:id="@+id/button1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:background="@drawable/butelka"
        android:onClick="butelka"
        android:text=" " />

    <TextView
        android:id="@+id/textViewMarka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewZwrot"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:shadowRadius="5"
        android:text="@string/butelka"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#c8b5b9"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewProducent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewMarka"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text=" "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ccca74" />

    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button1"
        android:visibility="gone"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textViewZwrot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="94dp"
        android:text="DzieÅ„ dobry!"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#9cbeac" />

</RelativeLayout>